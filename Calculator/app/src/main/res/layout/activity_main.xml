<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/gray"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:textSize="70sp"
        android:textAlignment="viewEnd"
        android:text="0"
        android:background="@color/gray"
        android:textColor="@color/light_gray"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <Button
                android:id="@+id/button_ac"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonCleanScreenEvent"/>
            <Button
                android:id="@+id/button_plus_minus"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonNumberEvent" />
            <Button
                android:id="@+id/button_percentage"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="%"
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonPercentageEvent"/>
            <Button
                android:id="@+id/button_divide"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="20sp"
                android:backgroundTint="@color/orange"
                android:textColor="@color/light_gray"
                tools:ignore="ButtonStyle"
                android:onClick="buttonOperationEvent"/>
        </TableRow>

        <TableRow
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <Button
                android:id="@+id/button_7"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonNumberEvent"/>
            <Button
                android:id="@+id/button_8"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonNumberEvent"/>
            <Button
                android:id="@+id/button_9"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonNumberEvent"/>
            <Button
                android:id="@+id/button_x"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="x"
                android:textSize="20sp"
                android:backgroundTint="@color/orange"
                android:textColor="@color/light_gray"
                tools:ignore="ButtonStyle"
                android:onClick="buttonOperationEvent"/>
        </TableRow>


        <TableRow
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <Button
                android:id="@+id/button_4"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonNumberEvent" />
            <Button
                android:id="@+id/button_5"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonNumberEvent"/>
            <Button
                android:id="@+id/button_6"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonNumberEvent"/>
            <Button
                android:id="@+id/button_minus"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="20sp"
                android:backgroundTint="@color/orange"
                android:textColor="@color/light_gray"
                tools:ignore="ButtonStyle"
                android:onClick="buttonOperationEvent" />
        </TableRow>


        <TableRow
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <Button
                android:id="@+id/button_1"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonNumberEvent"/>
            <Button
                android:id="@+id/button_2"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonNumberEvent"/>
            <Button
                android:id="@+id/button_3"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonNumberEvent"/>
            <Button
                android:id="@+id/button_plus"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="20sp"
                android:backgroundTint="@color/orange"
                android:textColor="@color/light_gray"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonOperationEvent"/>
        </TableRow>

        <TableRow
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <Button
                android:id="@+id/button_0"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="15"
                android:text="0"
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonNumberEvent" />
            <Button
                android:id="@+id/button_dot"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="20sp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonNumberEvent"/>

            <Button
                android:id="@+id/button_equals"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="20sp"
                android:backgroundTint="@color/orange"
                android:textColor="@color/light_gray"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                tools:ignore="ButtonStyle"
                android:onClick="buttonEqualEvent"/>

        </TableRow>

    </TableLayout>

</LinearLayout>
